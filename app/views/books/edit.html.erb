

<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  
  <div class="edit-field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
    
  <div class="edit-field">  
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  
  <div class="update-btn">
    <%= f.submit 'Update Book' %>
  </div>
  
  <div>
    <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %>
  </div>
  
<% end %>